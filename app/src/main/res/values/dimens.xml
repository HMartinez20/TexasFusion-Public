<!--
    dimens.xml

    Reusable values in the measurement of dp (Density-independent Pixels).
    The dp measurement is based on the physical density of the screen.
-->
<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Custom dimensions for spacing around objects. -->
    <dimen name="spacing_small">10dp</dimen>
    <dimen name="spacing_medium">15dp</dimen>
</resources>
